{
  "schemaVersion": 1,
  "id": "quickarmorswap",
  "version": "${version}",

  "name": "Quick Armor Swap",
  "description": "Just a simple small mod to swap an equipped armor piece with the one in your hand",
  "authors": [
    "SuperPro148"
  ],
  "contact": {
    "homepage": "https://SuperPro148.github.io/",
    "sources": "https://github.com/SuperPro148/quickarmorswap/"
  },

  "license": "GPL-3.0-only",
  "icon": "assets/quickarmorswap/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "io.github.superpro148.quickarmorswap.QuickArmorSwap"
    ],
    "modmenu": [
      "io.github.superpro148.quickarmorswap.ModMenuIntegration"
    ]
  },
  "mixins": [
    "quickarmorswap.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "minecraft": "~1.19",
    "java": ">=17",
    "fabric-api": "*"
  },
  "suggests": {
    "yet-another-config-lib": "*",
    "modmenu": "*"
  }
}
